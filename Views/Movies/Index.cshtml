@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Church Movie List";
}

<h1>Movie List</h1>

<p>
    <a asp-action="Create">Add Movie</a>
</p>
<form asp-controller="Movies" class="form-control" style="background-color: rgb(231, 251, 255)" asp-action="Index" method="get">
    <div class="row">
        <div class="col-sm-2 form-group">
            <label for="SortBy">Sort By:</label>
            <select id="SortBy" asp-for="SortBy" onchange="this.form.submit()">
                <option value="Genre">Genre</option>
                <option value="Title">Title</option>
                <option value="ReleaseDate">Release Date</option>
            </select>
        </div>
        <div class="col-sm-2 form-group">
            <label for="MovieGenre">Genre:</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" onchange="this.form.submit()">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-sm-3 form-group">
            <label for="SearchString">Title: </label>
            <input type="text" asp-for="SearchString" />
        </div>
        <div class="col-sm-1 form-group">
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>